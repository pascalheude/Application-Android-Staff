<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.assistanceinformatiquetoulouse.roulezrose.staff.ItemDetailFragment" >

    <TextView
        android:id="@+id/textView0"
        android:text="Poste"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinnerPoste"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/textView0"
        android:layout_toRightOf="@+id/textView0"
        android:entries="@array/postes"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView2"
        android:text="Conducteur : "
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView0"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewConducteur"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView0"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:text="Jaune : "
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2" />

    <TextView
        android:id="@+id/textViewJaune"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:text="Eclaireur : "
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3" />

    <TextView
        android:id="@+id/textViewEclaireur"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:text="Meneur : "
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4" />

    <TextView
        android:id="@+id/textViewMeneur"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:text="Lanterne : "
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5" />

    <TextView
        android:id="@+id/textViewLanterne"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:text="Binome : "
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6" />

    <TextView
        android:id="@+id/textViewBinome"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView7" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:text="Mise Ã  jour"
        android:textSize="16dp"
        android:enabled="false" />

</RelativeLayout>